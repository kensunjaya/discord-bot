generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @unique
  username      String
  role          Role       @default(BASIC)
  ownedPlaylist Playlist[] @relation("Playlist")
  servers       Server[]
  isPremium     Boolean    @default(false)
}

model Server {
  id      String @id @unique
  name    String
  members User[]
}

model Playlist {
  id        String   @id @default(uuid())
  title     String
  owner     User     @relation("Playlist", fields: [ownerId], references: [id])
  ownerId   String
  dateAdded DateTime
  data      Json
}

enum Role {
  BASIC
  ADMIN
}
